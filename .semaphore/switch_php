#!/bin/bash
export PHPBREW_DIR="$HOME/.phpbrew/php/$PHP_VERSION"
export PHPBREW_VERSION="phpbrew-$PHP_VERSION"
if cache has_key $PHPBREW_VERSION; then 
    cache restore $PHPBREW_VERSION; 
else 
    phpbrew --no-progress install --name $PHP_VERSION $PHP_VERSION; 
    cache store $PHPBREW_VERSION $PHPBREW_DIR; 
fi
phpbrew switch $PHP_VERSION
export COMPOSER_HASH="$(md5sum composer.lock | awk -F' ' '{ print $1 }')"